---
import ThemeToggle from './ThemeToggle.astro';
import Nav from './Nav.astro';
---

<header class="sticky top-0 z-50 w-full border-b border-[var(--color-border)] bg-[var(--color-bg-elevated)]/95 backdrop-blur supports-[backdrop-filter]:bg-[var(--color-bg-elevated)]/80">
  <div class="mx-auto flex h-16 max-w-5xl items-center justify-between px-4 sm:px-6">
    <button id="logo" class="cursor-pointer flex items-center gap-2 font-semibold text-[var(--color-text)] hover:text-[var(--color-accent)] transition-colors">
      <span class="text-xl">‚å®</span>
      <span>Atajos</span>
    </button>

    <script is:inline>
      document.querySelector('#logo').addEventListener('click', () => {
        location.reload()
      })
    </script>

    <nav class="flex items-center gap-1 sm:gap-2">
      <Nav />
      <div class="flex items-center xl:border-l xl:border-[var(--color-border)] xl:pl-3 xl:ml-2 gap-0.5">
        <a
          href="https://github.com/FraVelz"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub de FraVelz"
          class="p-2 rounded-lg text-[var(--color-text-muted)] hover:text-[var(--color-text)] hover:bg-[var(--color-code-bg)] transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </a>
        <ThemeToggle />
      </div>
      <Nav mobile />
    </nav>
  </div>
</header>
