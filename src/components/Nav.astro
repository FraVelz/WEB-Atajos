---
interface Props {
  mobile?: boolean;
}

const { mobile = false } = Astro.props;
import { navSections } from '../data';
---

{mobile ? (
  <div class="relative xl:hidden">
    <button
      id="nav-mobile-toggle"
      type="button"
      aria-expanded="false"
      aria-controls="nav-mobile-menu"
      aria-label="Abrir menú de navegación"
      class="p-2 rounded-lg text-[var(--color-text-muted)] hover:text-[var(--color-text)] hover:bg-[var(--color-code-bg)] lg:hidden"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
    <div
      id="nav-mobile-menu"
      class="absolute right-0 top-full mt-1 hidden flex-col gap-1 rounded-lg border border-[var(--color-border)] bg-[var(--color-bg-elevated)] p-2 shadow-xl z-50 xl:hidden"
      aria-hidden="true"
    >
      {navSections.map((s) => (
        <a
          href={s.href}
          data-nav-section={s.id}
          class="nav-link block rounded-md px-3 py-2 text-sm text-[var(--color-text-muted)] hover:bg-[var(--color-code-bg)] hover:text-[var(--color-accent)] transition-colors nav-mobile-link"
        >
          {s.label}
        </a>
      ))}
    </div>
  </div>
) : (
  <div class="hidden xl:flex items-center gap-1">
    {navSections.map((s) => (
      <a
        href={s.href}
        data-nav-section={s.id}
        class="nav-link rounded-md px-3 py-2 text-sm font-medium text-[var(--color-text-muted)] hover:bg-[var(--color-code-bg)] hover:text-[var(--color-accent)] transition-colors"
      >
        {s.label}
      </a>
    ))}
  </div>
)}

{mobile && (
  <script>
    const toggle = document.getElementById('nav-mobile-toggle');
    const menu = document.getElementById('nav-mobile-menu');
    if (toggle && menu) {
      toggle.addEventListener('click', () => {
        const isOpen = menu.classList.contains('flex');
        menu.classList.toggle('hidden', isOpen);
        menu.classList.toggle('flex', !isOpen);
        menu.setAttribute('aria-hidden', String(isOpen));
        toggle.setAttribute('aria-expanded', String(!isOpen));
      });
      document.querySelectorAll('.nav-mobile-link').forEach((link) => {
        link.addEventListener('click', () => {
          menu.classList.add('hidden');
          menu.classList.remove('flex');
          menu.setAttribute('aria-hidden', 'true');
          toggle.setAttribute('aria-expanded', 'false');
        });
      });
    }
  </script>
)}
