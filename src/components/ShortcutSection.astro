---
import type { ShortcutSection as SectionType } from '../data';

interface Props {
  section: SectionType;
  columns?: 2 | 3;
}

const { section } = Astro.props;
const cols = section.columns ?? 2;
---

<section class="space-y-3" id={section.id}>
  <div>
    <h3 class="text-lg font-semibold text-[var(--color-text)]">{section.title}</h3>
    {section.description && (
      <p class="mt-1 text-sm text-[var(--color-text-muted)]">{section.description}</p>
    )}
  </div>
  <div class="overflow-x-auto rounded-lg border border-[var(--color-border)]">
    <table class="shortcut-table">
      <thead>
        <tr>
          <th>Atajo</th>
          <th>Acción</th>
          {cols === 3 && <th>Descripción</th>}
        </tr>
      </thead>
      <tbody>
        {section.rows.map((row) => (
          <tr>
            <td>
              <code class="shortcut-kbd">{row.atajo}</code>
            </td>
            <td>{row.accion}</td>
            {cols === 3 && <td class="text-[var(--color-text-muted)] text-sm">{row.descripcion ?? ''}</td>}
          </tr>
        ))}
      </tbody>
    </table>
  </div>
</section>
